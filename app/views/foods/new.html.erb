<div class="container mt-5">
  <h1>Create a new food ingredient</h1>

  <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: "alert alert-#{name}" %>
  <% end -%>

  <%= form_with(model: [current_user, Food.new], local: true, class: 'mt-3') do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :measurement_unit, class: 'form-label' %>
      <%= f.text_field :measurement_unit, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :quantity, class: 'form-label' %>
      <%= f.number_field :quantity, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :price, class: 'form-label' %>
      <%= f.number_field :price, class: 'form-control', required: true %>
    </div>

    <%= f.submit "Create Food", class: 'btn btn-primary' %>
  <% end %>
</div>
