<% if @recipes.empty? %>
  <div class="container mt-4">
    <h2>There are no recipes yet</h2>
  </div>
<% end %>

<div class="container mt-4">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'Add Recipe', new_recipe_path, class: 'btn btn-primary shadow' %>
  </div>

  <div>
    <ul class="list-unstyled">
      <% @recipes.each do |recipe| %>
        <li class="border rounded p-3 mb-3">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h2><%= link_to recipe.name, recipe_path(recipe), class: 'text-decoration-none' %></h2>
              <%= link_to 'REMOVE', recipe_path(recipe), method: :delete, data: { "turbo-method": :delete }, class: 'btn btn-danger' %>
            </div>
            <div class="mt-3">
              <p><%= recipe.description %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
